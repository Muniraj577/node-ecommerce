<%- include ('../admin/layouts/base') %>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>Categories</h3>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Categories</h3>
                    <a href="/admin/categories/add-category" class="btn btn-primary float-right">New Category</a>
                </div>
                <div class="card-body">
                    <% if (count > 0) { %>
                        <table id="category" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <!--<th>S.N</th>-->
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% categories.forEach(function (cat) { %>
                                <tr>
                                    <td><%= cat.name %></td>
                                    <td><%= cat.slug %></td>
                                    <td><img src="/category/images/<%= cat.image %>" alt="" width="50px"></td>
                                    <td>
                                        <a href="/admin/categories/edit-category/<%= cat._id %>" class="btn btn-primary">Edit</a>
                                        <a href="/admin/categories/delete-category/<%= cat._id%>" onclick="confirm('Are you sure to delete?')" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <h3 class="text-center">There are no categories</h3>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
<script>
    $("#category").DataTable();
</script>
